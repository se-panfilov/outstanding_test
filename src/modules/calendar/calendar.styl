in_btn_border = 1px solid #FFF
button_width = 60px
between_btn_space = 3px

count_spaces(b, s)
  .calendar_day_btn
    &:first-of-type
      margin-left (button_width * b) + (between_btn_space * s)

.calendar
  padding 15px
  overflow-y auto
  max-height 1100px
  .calendar_years
    .calendar_months
      width (button_width * 7) + (between_btn_space * 15)
      .days_of_week
        .day_of_week
          display inline-block
          font-size 1em
          padding 0
          border-radius 2px
          margin between_btn_space
          min-width button_width
          text-align center
          &:nth-child(6), &:nth-child(7)
            background-color #EEE
      .calendar_days
        &.c_day_of_week_0
          count_spaces(1, 0)
        &.c_day_of_week_1
          count_spaces(1, 3)
        &.c_day_of_week_2
          count_spaces(2, 5)
        &.c_day_of_week_3
          count_spaces(3, 7)
        &.c_day_of_week_4
          count_spaces(4, 9)
        &.c_day_of_week_5
          count_spaces(5, 11)
        &.c_day_of_week_6
          count_spaces(6, 13)
        .calendar_day_btn
          display inline-block
          font-size 1em
          padding 0
          border-radius 2px
          margin between_btn_space
          min-width button_width
          min-height 70px
          text-align center
          .calendar_day
            padding 21px
          .extended_calendar_day
            .day_num_container
              .day_num
                font-weight bold
                padding 22px 0
            .total_days_dues
              border-bottom in_btn_border
              font-size 0.8em
            .total_days_amount
              font-size 0.8em
              height 50%
              border-top in_btn_border