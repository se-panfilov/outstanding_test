section.calendar(aria-label="Calendar")
    .calendar_years(ng-repeat="(year, monthList) in CalendarFactory.years track by $index")
        h3(ng-bind="year", aria-label="Year")
        .calendar_months(ng-repeat="(month, daysList) in monthList track by $index")
            h4(ng-bind="getMonthName(month)", aria-label="Month")
            span.calendar_days
                button.btn.calendar_day(type="button", ng-repeat="(day, day_info) in daysList track by $index", ng-class="{'btn-info': !!day_info.events.length, 'btn-default': !day_info.events}")
                    span(ng-bind="day", ng-hide!="day_info.events.length > 1")
                    div(ng-show!="day_info.events.length > 1")
                        div
                            span(ng-bind="day")
                        .day_info
                            .total_days_dues(ng-bind="getTotalForDay(day_info.events, DAY_EVENT_FIELDS.CONTRACT)")
                            .total_days_amount(ng-bind="getTotalForDay(day_info.events, DAY_EVENT_FIELDS.AMOUNT)")
